{
    "name": "wipple",
    "private": true,
    "main": "./dist/index.js",
    "scripts": {
        "start": "node .",
        "build": "npm run build:grammar && npm run build:esbuild",
        "build:grammar": "peggy src/syntax/grammar.pegjs --format es --source-map --allowed-start-rules '*' --cache",
        "build:esbuild": "node build.mjs",
        "dev": "npm run build && npm start",
        "test": "node -r esbuild-runner/register --test src/**/*.test.ts",
        "format": "prettier --write ."
    },
    "dependencies": {
        "chalk": "^5.6.0",
        "cmd-ts": "^0.14.1",
        "dedent": "^1.6.0",
        "immutable": "^5.1.3",
        "nanoid": "^5.1.5",
        "typescript": "^5.9.2",
        "wrap-ansi": "^9.0.0"
    },
    "devDependencies": {
        "@types/node": "^24.3.0",
        "esbuild": "^0.25.9",
        "esbuild-runner": "^2.2.2",
        "peggy": "^5.0.6",
        "prettier-plugin-pegjs": "^2.0.2"
    }
}
