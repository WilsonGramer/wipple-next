{
    "name": "wipple",
    "private": true,
    "main": "./dist/index.js",
    "scripts": {
        "start": "node .",
        "build": "npm run build:grammar && npm run build:esbuild",
        "build:grammar": "peggy src/syntax/grammar.pegjs --format es --source-map --allowed-start-rules '*' --cache",
        "build:esbuild": "node build.mjs",
        "dev": "npm run build && npm start",
        "test": "npm run build && node -r esbuild-runner/register --test src/**/*.test.ts tests/**/*.test.ts",
        "format": "prettier --write .",
        "exe": "npm run build && (EXE=/usr/local/bin/wipple; echo '#!/usr/bin/env node' > $EXE && cat ./dist/index.js >> $EXE && chmod +x $EXE)"
    },
    "dependencies": {
        "chalk": "^5.6.2",
        "cmd-ts": "^0.14.2",
        "dedent": "^1.7.0",
        "immutable": "^5.1.3",
        "nanoid": "^5.1.6",
        "typescript": "^5.9.2",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.12",
        "wrap-ansi": "^9.0.2"
    },
    "devDependencies": {
        "@types/node": "^24.5.2",
        "esbuild": "^0.25.10",
        "esbuild-runner": "^2.2.2",
        "peggy": "^5.0.6",
        "prettier-plugin-pegjs": "^2.0.2"
    }
}
